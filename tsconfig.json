{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext.asynciterable",
      "es2015"
    ],
    "jsx": "react",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
  ]
}
